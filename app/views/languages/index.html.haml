- title "Språk"
%section.box.index
  %h1.box-title= h1
  %table.full.wrap
    %thead
      %tr
        %td{ colspan: 2 }
          .actions= link_to t('actions.new'), new_language_path, class: "btn btn-primary"
      %tr
        %th Namn
        %th

    %tbody
      - @languages.each do |language|
        %tr
          %td= link_to language.name, edit_language_path(language)
          %td.delete= button_to t('actions.delete'), language, method: :delete, data: { confirm: 'Är du säker?' }, class: "btn btn-danger btn-sm"

      %tr
        %td{ colspan: 2 }
          .actions= link_to t('actions.new'), new_language_path, class: "btn btn-primary"
