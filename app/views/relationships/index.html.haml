- title "Anhöriga till #{@refugee.name}"
%section.box.index
  %h1.box-title= h1
  %table.full.wrap
    %thead
      %tr
        %th Namn
        %th

    %tbody
      - @refugee.relationships.each do |relationship|
        %tr
          %td= link_to relationship.related.name, edit_refugee_relationship_path(@refugee, relationship)
          %td.delete= link_to t('actions.delete'), refugee_relationship_path(@refugee, relationship), method: :delete, data: { confirm: 'Är du säker?' }, class: "btn btn-danger btn-sm"
