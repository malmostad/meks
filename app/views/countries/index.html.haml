- title "Länder"
%section.box.index
  %h1.box-title= h1

  %table.full.wrap
    %thead
      %tr
        %td{ colspan: 2 }
          .actions= link_to t('actions.new'), new_country_path, class: "btn btn-primary"
      %tr
        %th Namn
        %th

    %tbody
      - @countries.each do |country|
        %tr
          %td= link_to country.name, edit_country_path(country)
          %td.delete= button_to t('actions.delete'), country, method: :delete, data: { confirm: 'Är du säker?' }, class: "btn btn-danger btn-sm"
      %tr
        %td{ colspan: 2 }
          .actions= link_to t('actions.new'), new_country_path, class: "btn btn-primary"
