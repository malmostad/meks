- title "Redigera extra kostnaden"
%section.box.index
  %h1.box-title= h1
  .box-content
    = simple_form_for @refugee_extra_cost, url: refugee_refugee_extra_cost_path(@refugee, @refugee_extra_cost), html: { class: "basic" } do |f|
      = f.error_notification class: "warning"
      = render 'form', f: f

- if can?(:destroy, RefugeeExtraCost)
  %section.box.show.user.danger-zone
    %h1.box-title Riskområde
    .box-content.basic.form-data
      %section.misc
        %p= "Extra kostnaden kommer att raderas permanent. Detta går inte att ångra."
        .delete= button_to 'Radera extra kostnaden permanent', refugee_refugee_extra_cost_path(@refugee, @refugee_extra_cost), method: :delete, data: { confirm: 'Är du säker på att du vill radera placeringen permanent?' }, class: "btn btn-danger btn-default"
