= form_tag reports_generate_path, class: 'basic' do
  %h2.group-title Ekonomi – uppbokning
  .form-group
    %span.control-label
      %label{ for: 'placements_from' } Placerade mellan:
    .controls
      .input-group.input-daterange
        = text_field_tag 'placements_from', DateTime.now.beginning_of_quarter.to_date - 3.months,
          class: 'form-control'
        %span.input-group-addon och
        = text_field_tag 'placements_to', DateTime.now.beginning_of_quarter.to_date - 1.day,
          class: 'form-control'

  .form-group
    %span.control-label
      %label{ for: 'municipality' } Urval:
    .controls
      = select_tag('municipality', options_for_select("Alla" => 'all', "Barn med överlappande placeringar" => 'overlapping'),
        class: 'form-control chosen')

  .form-group
    %span.no-control-label
    .controls
      = hidden_field_tag(:report_type, 'economy_uppbokning')
      = submit_tag 'Skapa rapport', name: nil, class: 'btn btn-primary'
